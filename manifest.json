{
  "manifest_version": 3,
  "name": "Grayscale Mode",
  "version": "1.0",
  "description": "Turn any webpage black & white with one click.",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
